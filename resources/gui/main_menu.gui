[@MAIN_BUTTON] {
    type: button
    size: 200, 50
    margin: 10
    alignment: center
}
[@OPTIONS_SLIDER] {
    layout: vertical
    {
        size: 300, 30
        {
            type: label
            caption: {LABEL}
            text.alignment: left
            stretch: true
        }
        [VALUE] {
            type: label
            caption: XXX
            text.alignment: right
            stretch: true
        }
    }
    [SLIDER] {
        size: 300, 30
        type: slider
        range: 100
    }
}
[@CONTROLS_KEYBINDING] {
    layout: horizontal
    [NAME] {
        type: label
        fill_height: true
        size: 100, 20
        caption: ...
        text.size: 20
        text.alignment: right
        margin: 0, 5, 0, 0
    }
}
[@CONTROLS_KEYBINDING_BUTTON] {
    type: button
    size: 100, 20
    caption: ...
    text.size: 15
    margin: 2, 0
}
[@CREDITS_SECTION] {
    type: label
    scale_to_text: true
    text.size: 25
    alignment: center
}
[@CREDITS_TITLE] {
    type: label
    scale_to_text: true
    text.size: 15
    text.alignment: left
}
[@CREDITS_LINE] {
    type: label
    scale_to_text: true
    text.size: 10
    text.alignment: left
}
