[MAIN_MENU] {
    stretch: true

    [TITLE] {
        alignment: top
        type: label
        theme_data: menu_menu_title
        caption: RogDox
        scale_to_text: true
    }

    {
        layout: vertical
        alignment: bottom
        
        [START] {
            @ref: MAIN_BUTTON
            caption: START

            {
                type: keynavigator
                margin: -5
                stretch: true
                select: PRIMARY
            }
        }

        [OPTIONS] {
            @ref: MAIN_BUTTON
            caption: OPTIONS
        }

        [CREDITS] {
            @ref: MAIN_BUTTON
            caption: CREDITS
        }

        [QUIT] {
            @ref: MAIN_BUTTON
            caption: QUIT
        }
    }
}

[OPTIONS_MENU] {
    stretch: true

    [OPTIONS] {
        layout: vertical
        alignment: center
        
        [EFFECT_VOLUME] {
            @ref: OPTIONS_SLIDER LABEL=Effect volume:
        }
        [MUSIC_VOLUME] {
            @ref: OPTIONS_SLIDER LABEL=Music volume:
        }
        
        [CONTROLS] {
            @ref: MAIN_BUTTON
            caption: Controls
        }
    }

    {
        layout: vertical
        alignment: bottom
        [BACK] {
            @ref: MAIN_BUTTON
            caption: BACK
            keybinding: ESCAPE
            {
                type: keynavigator
                margin: -5
                stretch: true
                select: PRIMARY
            }
        }
    }
}

[CONTROLS_MENU] {
    stretch: true

    [KEYS] {
        layout: vertical
        alignment: center
    }

    {
        layout: vertical
        alignment: bottom
        [BACK] {
            @ref: MAIN_BUTTON
            caption: BACK
            keybinding: ESCAPE
            {
                type: keynavigator
                margin: -5
                stretch: true
                select: PRIMARY
            }
        }
    }
}

